root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.py]
max_line_length = 88

[*.html]
indent_size = 2

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[**/vendored/**]
indent_style = ignore
indent_size = ignore

[**.min.js]
indent_style = ignore
insert_final_newline = ignore

[**/node_modules/**]
indent_style = ignore
insert_final_newline = ignore

[Makefile]
indent_style = tab

{% extends "eventyay/email/base.jinja" %}
{% block content %}
  <tr>
    <td class="containertd">
      <!--[if gte mso 9]>
        <table cellpadding="20"><tr><td>
      <![endif]-->
      <div class="content">
        {{ body | safe }}
      </div>
      <!--[if gte mso 9]>
        </td></tr></table>
      <![endif]-->
    </td>
  </tr>
  {% if order %}
    {% include "eventyay/email/separator.jinja" %}
    <tr>
      <td class="order containertd">
        <!--[if gte mso 9]>
          <table cellpadding="20"><tr><td>
        <![endif]-->
        <div class="content">
          {% include "eventyay/email/order_details.jinja" %}
        </div>
        <!--[if gte mso 9]>
          </td></tr></table>
        <![endif]-->
      </td>
    </tr>
  {% endif %}
  {% if signature %}
    {% include "eventyay/email/separator.jinja" %}
    <tr>
      <td class="order containertd">
        <!--[if gte mso 9]>
          <table cellpadding="20"><tr><td>
        <![endif]-->
        <div class="content">
          {{ signature | safe }}
        </div>
        <!--[if gte mso 9]>
          </td></tr></table>
        <![endif]-->
      </td>
    </tr>
  {% endif %}
{% endblock %}
